!!! 5
%html{ :lang => "en" }
  %head
    %meta{ :charset => "utf-8" }

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    %title= content_for?(:title) ? yield(:title) : "Untitled"

    = stylesheet_link_tag "<%= @options[:namespace] ? "#{@options[:namespace]}/appllication" : "application" %>"
    = javascript_include_tag "<%= @options[:namespace] ? "#{@options[:namespace]}/application" : "application" %>", "data-turbolinks-track" => true
    = csrf_meta_tag

  %body

    = yield
